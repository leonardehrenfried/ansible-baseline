[Unit]
Description=Run OTP

# Restart once within 20 minutes so that an intermittent network failures are gracefully handled
StartLimitIntervalSec=1200
StartLimitBurst=2

[Container]
Environment=JAVA_TOOL_OPTIONS="{{ otp_jvm_opts }}"
Environment=TZ="{{ timezone }}"
Pull=newer
Image=otp.image
{% if otp_mount_volume %}
Volume={{ otp_base_dir }}/latest/:/var/opentripplanner:z
{% endif %}
PublishPort={{ otp_port }}:8080
Exec=--load --serve
LogDriver=journald

[Service]
ExecStartPre=-send-to-matrix "ðŸš† Starting %n on {{ matrix_hostname }}"
Restart=on-failure

[Install]
# Start by default on boot
WantedBy=multi-user.target default.target